# Configurações de Produção - Renomeie para .env e altere os valores

# Chaves secretas (OBRIGATÓRIO alterar em produção)
SECRET_KEY=sua-chave-secreta-super-forte-aqui-256-bits-minimo
JWT_SECRET_KEY=jwt-chave-secreta-diferente-da-anterior-256-bits

# Ambiente
FLASK_ENV=production
DEBUG=False

# Banco de dados
DATABASE_URL=sqlite:///src/database/app.db

# Upload
MAX_CONTENT_LENGTH=5242880
UPLOAD_FOLDER=uploads

# Configurações de email (opcional - para recuperação de senha)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=seu-email@gmail.com
SMTP_PASSWORD=sua-senha-de-app

# Configurações de segurança
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

